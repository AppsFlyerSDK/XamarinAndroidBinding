<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item> <!-- Use colorPrimaryDark for variant -->
        <item name="colorOnPrimary">@color/windowBackground</item> <!-- Text/icons on primary color -->
        
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/palette_orange</item> <!-- A variant of accent -->
        <item name="colorOnSecondary">@color/palette_dark_gray</item> <!-- Text/icons on secondary color -->

        <item name="android:colorBackground">@color/windowBackground</item>
        <item name="colorSurface">@color/windowBackground</item> <!-- Surfaces like cards, sheets -->
        <item name="colorOnSurface">@color/textColorPrimary</item> <!-- Text/icons on surface color -->
        
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="StatusTextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/status_textview_background</item>
        <item name="android:elevation">4dp</item> <!-- For shadow on API 21+ -->
    </style>

</resources> 